<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="70dp"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="70dp"
    android:layout_marginBottom="-10dp"
    app:cardBackgroundColor="@color/playerCard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/trainingLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_training_foreground" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/trainingsDateCardTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/trainingLogo"
            android:layout_marginStart="24dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/trainingLogo"
            android:text="Training Date"
            android:textAlignment="viewStart" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/trainingsTimeCardTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/trainingsDateCardTextview"
            android:layout_alignBottom="@+id/trainingLogo"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="-17dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@id/trainingLogo"
            android:text="Training Time"
            android:textAlignment="viewStart" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
